<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
  <!--  android:background="#FF272727">-->
  
    <RelativeLayout 
        android:id="@+id/InnerTopLayout"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:paddingLeft="2dp"
        android:paddingRight="2dp"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:background="#FF272727"     
        >

	     <ImageButton android:id="@+id/btn_record" 
	    	  android:src="@drawable/autosave_off"
	          android:layout_width="32dp"
	          android:layout_height="32dp"
	          android:padding="0dp"
	          android:background="@android:color/transparent"
	          android:layout_alignParentBottom="true"
	          android:scaleType="fitXY"
	          android:onClick="on_autosave"
	          android:layout_marginTop="40dp" android:layout_marginBottom="15dp"/>
	          

	     <ImageButton android:id="@+id/btn_af_now" 
	    	  android:src="@drawable/autofocus_now"
	          android:layout_width="32dp"
	          android:layout_height="32dp"
	          android:scaleType="fitXY"
	          android:padding="0dp"
	          android:background="@android:color/transparent"
	          android:layout_above="@+id/btn_record"
	          android:onClick="on_btn_af_clicked" android:layout_marginTop="5dp" android:layout_marginBottom="25dp"/>    
          
	     <ImageButton android:id="@+id/btn_focus" 
	    	  android:src="@drawable/focus_auto"
	          android:layout_width="32dp"
	          android:layout_height="32dp"
	          android:scaleType="fitXY"
	          android:padding="0dp"
	          android:background="@android:color/transparent"
	          android:layout_above="@+id/btn_af_now"
	          android:onClick="on_focus_mode_clicked"
	          android:layout_marginTop="15dp" android:layout_marginBottom="2dp"/>    
	          
<!--      <ImageButton android:id="@+id/btn_wb" 
	    	  android:src="@drawable/white_balance"
	          android:layout_width="32dp"
	          android:layout_height="32dp"
	          android:padding="0dp" 
	          android:background="@android:color/transparent"
	          android:layout_above="@+id/btn_focus"
	          android:scaleType="fitXY"
	          android:layout_marginTop="15dp" android:layout_marginBottom="15dp" 
	          /> -->	
	          
	     <ImageButton android:id="@+id/btn_flash" 
	    	  android:src="@drawable/btn_flash"
	          android:layout_width="32dp"
	          android:layout_height="32dp"
	         android:padding="0dp"
	          android:background="@android:color/transparent"
	          android:onClick="on_btn_flash_clicked"
	          android:layout_alignParentTop="true"
	          android:scaleType="fitXY"
	          android:layout_marginTop="15dp" android:layout_marginBottom="15dp"/>	            	          
	</RelativeLayout>	
	


	<RelativeLayout 
        android:id="@+id/InnerTextLayout"
        android:layout_toRightOf="@+id/InnerTopLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="2dp"
        android:paddingRight="2dp"
        android:paddingTop="2dp"
        android:layout_marginBottom="12dp"
        android:layout_alignParentBottom="true"
        android:paddingBottom="2dp">        
<!--	<TextView  
		 android:id="@+id/textView1"
		 android:layout_width="120dp" 
		 android:layout_height="120dp"
		 android:text="720px 16,123 FPS"
		 android:layout_marginTop="2dp"
		 android:textSize="12dp"
		 >
   </TextView>
 -->   
   </RelativeLayout>

   
    <FrameLayout
        android:id="@+id/InnerFrameLayout"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@android:color/transparent">	


	</FrameLayout> 
	
    <RelativeLayout 
        android:id="@+id/InnerBottomLayout"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:paddingLeft="2dp"
        android:paddingRight="2dp"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:background="#FF272727">

	     <ImageButton android:id="@+id/btn_save" 
	    	  android:src="@android:drawable/ic_menu_save"
	    	  android:layout_width="32dp"
	          android:layout_height="32dp"
	          android:padding="0dp"
	          android:background="@android:color/transparent"
	          android:onClick="on_save"
	          android:layout_alignParentBottom="true"
	          android:scaleType="fitXY" android:layout_marginTop="10dp" android:layout_marginBottom="15dp"/>
	          
	     <ImageButton android:id="@+id/btn_delete" 
	    	  android:layout_width="32dp"
	          android:layout_height="32dp"
	          android:padding="0dp"
	          android:scaleType="fitXY"	          
	    	  android:src="@android:drawable/ic_menu_delete"
	          android:background="@android:color/transparent"
	          android:layout_above="@+id/btn_save"
	          android:onClick="on_delete" android:layout_marginTop="10dp" android:layout_marginBottom="10dp"/>    
	          
	     <ImageButton android:id="@+id/btn_preferences" 
	    	  android:src="@android:drawable/ic_menu_preferences"
    	  android:layout_width="32dp"
	          android:layout_height="32dp"
	          android:padding="0dp"
	          android:scaleType="fitXY"	
	          android:background="@android:color/transparent"
	          android:layout_below="@+id/btn_info"
	          android:onClick="on_settings" android:layout_marginTop="10dp" android:layout_marginBottom="10dp"/>  

	     <ImageButton android:id="@+id/btn_info" 
	    	  android:src="@android:drawable/ic_menu_help"
	     	  android:layout_width="32dp"
	          android:layout_height="32dp"
	          android:scaleType="fitXY"
	          android:padding="0dp"
	          android:background="@android:color/transparent"
	          android:onClick="on_info"
	          android:layout_alignParentTop="true"
	          android:layout_marginTop="10dp" android:layout_marginBottom="10dp"/>    	        
	</RelativeLayout>
    	          
</RelativeLayout>
